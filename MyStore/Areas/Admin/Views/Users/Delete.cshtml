@model MyStore.Models.User

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<h2 class="bg-success">XÓA TÀI KHOẢN NGƯỜI DÙNG</h2>

<h3>Are you sure you want to delete this user?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>Username</dt>
        <dd>@Model.Username</dd>

        <dt>Password</dt>
        <dd>@Model.Password</dd>

        <dt>User Role</dt>
        <dd>@Model.UserRole</dd>
    </dl>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Delete</button>
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" }, new { id = HttpUtility.UrlEncode(Model.Username) })
}


