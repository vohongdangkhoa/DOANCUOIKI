@model IEnumerable<MyStore.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<h2>Danh Sách Người Dùng</h2>

<p>
    @Html.ActionLink("Create New User", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-bordered table-striped">
    <tr>
        <th>Tên Người Dùng</th>
        <th>Loại Tài Khoản</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Username</td>
            <td>@item.UserRole</td>
            <td>
                @Html.ActionLink("Chi Tiết", "Details", new { id = item.Username }) |
                @Html.ActionLink("Chỉnh Sửa", "Edit", new { id = item.Username }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.Username })
            </td>
        </tr>
    }
</table>
