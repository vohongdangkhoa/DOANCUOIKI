<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ShopHKT</title>

    <!-- CSS -->
    @Styles.Render("~/Content/css")
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .sidebar {
            min-width: 220px;
            max-width: 220px;
            background-color:#50c1f9;
            min-height: 100vh;
        }

            .sidebar a {
                color: #fff;
                text-decoration: none;
            }

                .sidebar a:hover {
                    background-color: #495057;
                }

        .content {
            flex: 1;
            padding: 20px;
        }

        footer {
            background-color: #f8f9fa;
            padding: 10px 20px;
            text-align: center;
        }

        .nav-link.active {
            background-color: #495057;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="sidebar d-flex flex-column p-3">
            <h4 class="text-white mb-4">Quản Trị Viên ShopHKT</h4>
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    @Html.ActionLink("Trang Chủ", "Index", "Home", null, new { @class = "nav-link text-white" })
                </li>
                <li>
                    @Html.ActionLink("Danh Mục Sách", "Index", "Categories", null, new { @class = "nav-link text-white" })
                </li>
                <li>
                    @Html.ActionLink("Sách", "Index", "Books", null, new { @class = "nav-link text-white" })
                </li>
                <li>
                    @Html.ActionLink("Đơn Hàng", "Index", "Orders", null, new { @class = "nav-link text-white" })
                </li>
                <li>
                    @Html.ActionLink("Khách Hàng", "Index", "Customers", null, new { @class = "nav-link text-white" })
                </li>
                <li>
                    @Html.ActionLink("Tài Khoản", "Index", "Users", null, new { @class = "nav-link text-white" })
                </li>
            </ul>
            <hr />

        </nav>

        <!-- Main Content -->
        <div class="content flex-fill">
            <nav class="navbar navbar-expand navbar-light bg-light mb-3">
                <div class="container-fluid">
                    <span class="navbar-brand mb-0 h1">@ViewBag.Title</span>
                </div>
            </nav>

            @RenderBody()
        </div>
    </div>

    <footer>
        <p>&copy; @DateTime.Now.Year - MyStore Admin Panel</p>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
</body>
</html>
