@model IEnumerable<MyStore.Models.Book>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<head>
    <style>
        img {
            width: 200px;
            height: 200px;
            object-fit: cover;
        }
    </style>
</head>
<h2 class="bg-success">📚 DANH SÁCH SẢN PHẨM</h2>
<table class="table bg-info container-fluid">
    <thead class="table-dark">
        <tr>
            <th>Ảnh</th>
            <th>Danh Mục</th>
            <th>Tên Sách</th>
            <th>Mô Tả</th>
            <th>Giá</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <!-- Ảnh -->
                <td>
                   <img src="@Html.DisplayFor(modelItem =>item.Image)"/>
                </td>

                <!-- Danh mục -->
                <td>@item.Category.CategoryName</td>

                <!-- Tên Sách -->
                <td class="fw-semibold">@item.BookTitle</td>

                <!-- Mô Tả -->
                <td>
                    @{
                        var desc = !string.IsNullOrEmpty(item.Description)
                            ? (item.Description.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description)
                            : "";
                    }
                    @desc
                </td>

                <!-- Giá -->
                <td class="fw-bold text-danger">@item.Price.ToString("C")</td>

                <!-- Hành Động -->
                <td class="text-center">
                    <a href="@Url.Action("Edit", "Books", new { id = item.BookID, area = "Admin" })" class="btn btn-primary btn-sm">Chỉnh Sửa</a>
                    <a href="@Url.Action("Details", "Books", new { id = item.BookID, area = "Admin" })" class="btn btn-warning btn-sm">Chi Tiết</a>
                    <a href="@Url.Action("Delete", "Books", new { id = item.BookID, area = "Admin" })"
                       class="btn btn-danger btn-sm"
                       onclick="return confirm('Bạn chắc chắn muốn xóa sách này?');">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="mb-3">
    @Html.ActionLink("Thêm Sách Mới", "Create", "Books", new { area = "Admin" }, new { @class = "btn btn-success" })
</div>