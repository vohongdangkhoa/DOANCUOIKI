@model MyStore.Models.Book

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="bg-success">Thêm Sách Mới</h2>

@using (Html.BeginForm("Create", "Books", FormMethod.Post, new { enctype = "multipart/form-data", @class = "needs-validation" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-horizontal">
        <!-- Hình Ảnh -->
        <div class="col-md-6">
            <label class="form-label fw-bold">Hình Ảnh</label>
            @Html.EditorFor(model => model.Image, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
        </div>

        <!-- Danh Mục -->
        <div>
            <label class="form-label fw-bold">Danh Mục</label>
            @Html.DropDownList("CategoryID", null, "Chọn danh mục", new { @class = "form-select" })
            @Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger" })
        </div>

        <!-- Tên Sách -->
        <div>
            <label class="form-label fw-bold">Tên Sách</label>
            @Html.EditorFor(model => model.BookTitle, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.BookTitle, "", new { @class = "text-danger" })
        </div>

        <!-- Mô Tả -->
        <div>
            <label class="form-label fw-bold">Mô Tả</label>
            @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = 3 })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>

        <!-- Giá Bán -->
        <div>
            <label class="form-label fw-bold">Giá Bán</label>
            @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
        </div>

        <!-- Năm Xuất Bản -->
        <div>
            <label class="form-label fw-bold">Năm Xuất Bản</label>
            @Html.EditorFor(model => model.PublishYear, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PublishYear, "", new { @class = "text-danger" })
        </div>

        <!-- Số Lượng Tồn Kho -->
        <div>
            <label class="form-label fw-bold">Số Lượng Tồn Kho</label>
            @Html.EditorFor(model => model.Stock, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Stock, "", new { @class = "text-danger" })
        </div>
        <hr />
        <!-- Nút Lưu và Quay Lại -->
        <div>
            <button type="submit" class="btn btn-success me-2">💾 Lưu</button>
            @Html.ActionLink("↩ Quay về danh sách", "Index", "Books", new { area = "Admin" }, new { @class = "btn btn-primary" })
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
