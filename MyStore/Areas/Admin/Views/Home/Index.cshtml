@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@model IEnumerable<MyStore.Models.Book>

<head>
    <style>
        .book-card {
            transition: transform 0.2s, box-shadow 0.2s;
            border-radius: 15px;
            overflow: hidden;
        }

            .book-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
            }

            .book-card img {
                width: 100%;
                height: 250px;
                object-fit: cover;
            }

        .card-title {
            font-size: 1.2rem;
            font-weight: 600;
        }

        .card-text {
            font-size: 0.95rem;
            color: #555;
        }

        .price-tag {
            font-size: 1.1rem;
        }

        .badge-new {
            position: absolute;
            top: 10px;
            right: 10px;
            background-color: #ff5e57;
            color: #fff;
            font-size: 0.8rem;
            padding: 5px 8px;
            border-radius: 10px;
        }

        .no-image-placeholder {
            height: 250px;
            background: #f8f9fa;
            display: flex;
            align-items: center;
            justify-content: center;
            font-style: italic;
            color: #888;
        }
    </style>
</head>

<div class="container mt-5">
    <h2 class="mb-4 fw-bold text-primary text-center">📚 Sách Mới & Nổi Bật</h2>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 book-card position-relative shadow-sm">

                    <!-- Badge Mới -->
                    <span class="badge-new">Mới</span>

                    <!-- Ảnh sách -->
                    @if (!string.IsNullOrEmpty(item.Image))
                    {
                        <img src="@item.Image" alt="@item.BookTitle" class="card-img-top" />
                    }
                    else
                    {
                        <div class="no-image-placeholder">
                            No Image
                        </div>
                    }

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.BookTitle</h5>

                        <p class="card-text text-truncate" style="max-height:3em;">
                            @item.Description
                        </p>

                        <p class="fw-bold text-danger price-tag mb-3">
                            @item.Price.ToString("N0") ₫
                        </p>

                        <div class="mt-auto">
                            <a href="@Url.Action("Details", "Books", new { id = item.BookID })"
                               class="btn btn-gradient w-100 text-white" style="background: linear-gradient(45deg, #1d9af2, #0f6cda);">
                                Xem Chi Tiết
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        }
    </div>
</div>
