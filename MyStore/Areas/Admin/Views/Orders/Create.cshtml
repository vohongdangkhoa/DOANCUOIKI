@model MyStore.Models.Order

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<h2>Tạo đơn hàng</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.CustomerID, "Khách hàng", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("CustomerID", null, "-- Chọn khách hàng --", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.OrderDate, "Ngày tạo", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.OrderDate, new { @class = "form-control", type = "datetime-local" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.TotalAmount, "Tổng tiền", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.TotalAmount, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.PaymentStatus, "Thanh toán", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.PaymentStatus, new { @class = "form-control", placeholder = "pending / paid / cancelled" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.DeliveryAddress, "Địa chỉ giao", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.DeliveryAddress, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tạo" class="btn btn-primary" />
                <a href="@Url.Action("Index")" class="btn btn-default">Hủy</a>
            </div>
        </div>
    </div>
}
