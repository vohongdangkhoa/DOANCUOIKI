@model IEnumerable<MyStore.Models.Book>

@foreach (var book in Model)
{
    <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
        <div class="card h-100 border-0 product-card">
            <a href="@Url.Action("Details", new { id = book.BookID })" class="text-decoration-none">
                <img src="@(string.IsNullOrEmpty(book.Image) ? "/Content/images/default-book.jpg" : book.Image)"
                     class="card-img-top"
                     alt="@book.BookTitle"
                     style="height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h6 class="card-title text-dark mb-2" style="font-size: 0.9rem; line-height: 1.3;">
                        @book.BookTitle
                    </h6>
                    <div class="card-text">
                        <div class="text-danger fw-bold mb-1">@book.Price.ToString("N0") ₫</div>
                        <div class="text-warning small mb-1">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star-half-alt"></i>
                        </div>
                        <div class="text-muted small">Đã bán @(book.Stock / 10)k</div>
                    </div>
                </div>
            </a>
        </div>
    </div>
}