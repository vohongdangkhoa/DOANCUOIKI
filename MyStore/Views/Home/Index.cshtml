@model MyStore.Models.HomeViewModel

@{
    ViewBag.Title = "MyStore - Trang chủ";
}

<div class="banner-carousel">
    <div class="slides">
        <div class="slide active">
            <img src="~/Content/images/banner.jpg" alt="Banner 1">
        </div>
        <div class="slide">
            <img src="~/Content/images/banner1.jpg" alt="Banner 2">
        </div>
        <div class="slide">
            <img src="~/Content/images/banner2.jpg" alt="Banner 3">
        </div>
    </div>

    <div class="carousel-dots">
        <span class="dot active" data-slide="0"></span>
        <span class="dot" data-slide="1"></span>
        <span class="dot" data-slide="2"></span>
    </div>

    <button class="carousel-prev">‹</button>
    <button class="carousel-next">›</button>
</div>

<!-- Sách nổi bật -->
<div class="container">
    <h2 class="section-title">Sách nổi bật</h2>
    <div class="products-grid">
        @foreach (var book in Model.FeaturedBooks)
        {
            <div class="product-card">
                <!-- QUAN TRỌNG: Sửa thành "Books" thay vì "Product" -->
                <a href="@Url.Action("Details", "Books", new { id = book.BookID })" class="product-card-clickable"></a>
                <a href="@Url.Action("Details", "Books", new { id = book.BookID })" class="product-image-link">
                    <img src="@(string.IsNullOrEmpty(book.Image) ? "/Content/images/default-book.jpg" : book.Image)"
                         alt="@book.BookTitle" class="product-image">
                </a>
                <div class="product-info">
                    <!-- QUAN TRỌNG: Sửa thành "Books" thay vì "Product" -->
                    <a href="@Url.Action("Details", "Books", new { id = book.BookID })" class="product-title">@book.BookTitle</a>
                    <div class="product-price">@book.Price.ToString("N0") ₫</div>
                    <div class="product-rating">
                        <div class="stars">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star-half-alt"></i>
                        </div>
                        <span class="sold">Đã bán @(book.Stock / 10)k</span>
                    </div>
                    <div class="product-actions">
                        <button class="buy-now-btn"
                                data-book-id="@book.BookID"
                                data-book-title="@book.BookTitle">
                            Mua hàng
                        </button>
                        <button class="add-to-cart-btn"
                                data-book-id="@book.BookID"
                                data-book-title="@book.BookTitle">
                            Thêm vào giỏ
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Sách mới -->
<div class="container">
    <h2 class="section-title">Sách mới về</h2>
    <div class="products-grid">
        @foreach (var book in Model.NewArrivals)
        {
            <div class="product-card">
                <!-- QUAN TRỌNG: Sửa thành "Books" thay vì "Product" -->
                <a href="@Url.Action("Details", "Books", new { id = book.BookID, area = "" })" class="product-card-clickable"></a>
                <a href="@Url.Action("Details", "Books", new { id = book.BookID, area = "" })" class="product-image-link">
                    <img src="@(string.IsNullOrEmpty(book.Image) ? "/Content/images/default-book.jpg" : book.Image)"
                         alt="@book.BookTitle" class="product-image">
                </a>
                <div class="product-info">
                    <!-- QUAN TRỌNG: Sửa thành "Books" thay vì "Product" -->
                    <a href="@Url.Action("Details", "Books", new { id = book.BookID, area = "" })" class="product-title">@book.BookTitle</a>
                    <div class="product-price">@book.Price.ToString("N0") ₫</div>
                    <div class="product-rating">
                        <div class="stars">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star-half-alt"></i>
                        </div>
                        <span class="sold">Đã bán @(book.Stock / 10)k</span>
                    </div>
                    <div class="product-actions">
                        <button class="buy-now-btn"
                                data-book-id="@book.BookID"
                                data-book-title="@book.BookTitle">
                            Mua hàng
                        </button>
                        <button class="add-to-cart-btn"
                                data-book-id="@book.BookID"
                                data-book-title="@book.BookTitle">
                            Thêm vào giỏ
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Nút xem tất cả sách -->
<div class="container text-center mt-5">
    <a href="@Url.Action("Index", "Books")" class="btn btn-primary btn-lg">
        <i class="fas fa-book"></i> Xem Tất Cả Sách
    </a>
</div>

@section scripts {
    <script>$(document).ready(function () {
            // Xử lý thêm vào giỏ hàng
            $('.add-to-cart-btn').click(function (e) {
                e.preventDefault();
                e.stopPropagation();

                var bookId = $(this).data('book-id');
                var bookTitle = $(this).data('book-title');$.post('@Url.Action("AddToCart", "Cart")', { id: bookId })
                    .done(function (response) {
                        alert('Đã thêm "' + bookTitle + '" vào giỏ hàng');
                    })
                    .fail(function () {
                        alert('Có lỗi xảy ra khi thêm vào giỏ hàng');
                    });
            });

            // Xử lý mua ngay
            $('.buy-now-btn').click(function (e) {
                e.preventDefault();
                e.stopPropagation();

                var bookId = $(this).data('book-id');
                var bookTitle = $(this).data('book-title');

                $.post('@Url.Action("AddToCart", "Cart")', { id: bookId })
                    .done(function (response) {
                        window.location.href = '@Url.Action("Index", "Cart")';
                    })
                    .fail(function () {
                        alert('Có lỗi xảy ra khi thêm vào giỏ hàng');
                    });
            });
        });
    </script>
}